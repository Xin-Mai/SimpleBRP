<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="sample.Controller" stylesheets="@mainStyle.css"
          xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER" hgap="10" vgap="10">
    <padding><Insets top="0" right="0" bottom="10" left="0"/></padding>
    <HBox fx:id="top" prefHeight="60" maxHeight="60" styleClass="bg"
          maxWidth="Infinity" minWidth="-Infinity"
          spacing="20" alignment="BASELINE_CENTER" prefWidth="1067"
          GridPane.rowIndex="0" GridPane.columnIndex="0">
        <children>
            <Button
                    fx:id="check" text="查看订单" maxWidth="Infinity" prefWidth="160"
                    mnemonicParsing="false"
                    onAction="#handleCheckButtonAction" HBox.hgrow="ALWAYS"
                    prefHeight="40"/>
            <Button fx:id="manage" text="订单管理" maxWidth="Infinity" prefWidth="160" prefHeight="40"
                    mnemonicParsing="false"
                    onAction="#handleManageButtonAction" HBox.hgrow="ALWAYS"/>
            <Button fx:id="search" text="订单查询"  maxWidth="Infinity" prefWidth="160" prefHeight="40"
                    mnemonicParsing="false"
                    onAction="#handleSearchButtonAction" HBox.hgrow="ALWAYS"/>
            <Button fx:id="add" text="新建订单"  maxWidth="Infinity" prefWidth="160" prefHeight="40"
                    mnemonicParsing="false"
                    onAction="#handleAddButtonAction" HBox.hgrow="ALWAYS"/>
        </children>
        <padding><Insets top="10" right="15" bottom="10" left="15"/></padding>
    </HBox>
</GridPane>