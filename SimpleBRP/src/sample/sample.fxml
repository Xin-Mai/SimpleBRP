<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="sample.Controller" stylesheets="@mainStyle.css"
          xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER" hgap="10" vgap="10">
    <padding><Insets top="0" right="0" bottom="10" left="0"/></padding>
    <HBox fx:id="top"
          spacing="20" alignment="BASELINE_CENTER"
          GridPane.rowIndex="0" GridPane.columnIndex="0">
        <padding><Insets top="10" right="15" bottom="10" left="15"/></padding>
        <Button fx:id="check" text="查看订单" onAction="#handleCheckButtonAction"/>
        <Button fx:id="manage" text="订单管理" onAction="#handleManageButtonAction"/>
        <Button fx:id="search" text="订单查询" onAction="#handleSearchButtonAction"/>
        <Button fx:id="add" text="新建订单" onAction="#handleAddButtonAction"/>
    </HBox>
</GridPane>